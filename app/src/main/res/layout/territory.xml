<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:onClick="toCloseTerritory"
    >

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"

        android:layout_margin="10sp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/territory_score"
            android:text="黑领先 12.5目"
            android:gravity="center"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2sp"


                >
                <TextView
                    android:layout_width="0dp"
                    android:id="@+id/m_black_title"
                    android:gravity="center"
                    android:text="黑目"
                    android:layout_weight="2"

                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:id="@+id/m_white_title"
                    android:text="白目"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2sp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_black_score"
                    android:gravity="center"
                    android:text="84目"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/point"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_white_score"
                    android:text="64目"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2sp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_black_eat"
                    android:text=""
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="吃子"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_white_eat"
                    android:text="1目"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2sp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_black_back"
                    android:text=""
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/komi"
                    android:gravity="center"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/m_white_back"
                    android:text="6.5目"
                    android:gravity="center"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="toCloseTerritory"
        />
</RelativeLayout>
